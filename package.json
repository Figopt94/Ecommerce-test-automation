{
  "name": "ecommerce-test-automation",
  "version": "1.0.0",
  "description": "Production-ready E2E test automation framework using Playwright",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:smoke": "playwright test tests/smoke --workers=3",
    "test:regression": "playwright test tests/regression",
    "test:e2e": "playwright test tests/e2e",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "report": "playwright show-report",
    "clean": "rimraf test-results playwright-report screenshots/*.png videos/*.webm"
  },
  "keywords": [
    "playwright",
    "test-automation",
    "e2e-testing",
    "page-object-model",
    "saucedemo"
  ],
  "author": "Filipe Rodrigues",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  }
}